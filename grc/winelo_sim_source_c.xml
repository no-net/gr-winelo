<?xml version="1.0"?>
<!--
###################################################
## WiNeLo Simulation Source
###################################################
 -->
<block>
	<name>WiNeLo Source</name>
	<key>winelo_source</key>
	<category>WiNeLo</category>
	<import>from winelo.client import sim_source_c</import>
	<make>sim_source_c($serverip, $serverport, $clientname, $clientindex, $packetsize, $startreactor)</make>
	<param>
		<name>Server IP</name>
		<key>serverip</key>
		<value>'127.0.0.1'</value>
		<type>string</type>
	</param>
	<param>
		<name>Server Port</name>
		<key>serverport</key>
		<value>8888</value>
		<type>int</type>
	</param>
	<param>
		<name>Client Name</name>
		<key>clientname</key>
		<value>'Rx'</value>
		<type>string</type>
	</param>
	<param>
		<name>Client Index</name>
		<key>clientindex</key>
		<value>0</value>
		<type>int</type>
	</param>
	<param>
		<name>Packet Size</name>
		<key>packetsize</key>
		<value>5000</value>
		<type>int</type>
	</param>
	<param>
		<name>Start Reactor</name>
		<key>startreactor</key>
		<type>enum</type>
		<option>
			<name>Yes</name>
			<key>True</key>
		</option>
		<option>
			<name>No</name>
			<key>False</key>
		</option>
	</param>
	<source>
		<name>out</name>
		<type>complex</type>
	</source>
</block>
